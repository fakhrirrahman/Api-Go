{
  "info": {
    "name": "API Go - Booking System",
    "description": "Koleksi request untuk API Go Booking System dengan JWT Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('jwt_token', jsonData.data.token);",
                  "  console.log('Token disimpan: ' + jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('jwt_token', jsonData.data.token);",
                  "  console.log('Token disimpan dari register: ' + jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"Name\": \"John Doe\",\n  \"Email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["auth", "register"]
            }
          }
        }
      ]
    },
